<Selector>:
    pos: root.pos
    size_hint: (1, 1)

    Button:
        id: button_confirm_id
        text: 'Lie'
        size_hint: (1, .2)
        pos_hint: {'center_x': 0.5, 'y': 0.7}
        on_press: root.get_card()

    Label:
        size_hint: (0.1, .2)
        pos_hint: {'center_x': 0.9, 'center_y': 0.5}
        text: str(int(slider_id.value))

    Slider:
        id: slider_id
        min: 1
        max: 13
        step: 1
        #cursor_size: (1,1)
        size_hint: (.8, .1)
        pos_hint: {'x': 0, 'y': 0.45}
        text: 'slider'

    ToggleButton:
        size_hint: (.1, .1)
        pos_hint: {'x': 0.1, 'y': 0.15}
        text: 'S'
        group: 'suit'
        on_press: root._select_suit('S')

    ToggleButton:
        size_hint: (.1, .1)
        pos_hint: {'x': 0.3, 'y': 0.15}
        text: 'H'
        group: 'suit'
        on_press: root._select_suit('H')

    ToggleButton:
        size_hint: (.1, .1)
        pos_hint: {'x': 0.5, 'y': 0.15}
        text: 'D'
        group: 'suit'
        on_press: root._select_suit('D')

    ToggleButton:
        size_hint: (.1, .1)
        pos_hint: {'x': 0.7, 'y': 0.15}
        text: 'C'
        group: 'suit'
        on_press: root._select_suit('C')
